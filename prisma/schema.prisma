generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  credits   Int      @default(5)
  isPro     Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  aesthetic   String?  @default("Y2K")
  createdAt   DateTime @default(now())

  // --- NEW FIELDS FOR SAVED LISTINGS ---
  generatedDesc  String?  @db.Text
  generatedTags  String?  @db.Text
  
  // User Preferences Saved for this item
  condition      String?  // e.g. "Brand New", "Vintage Used"
  era            String?  // e.g. "Y2K", "90s", "Modern"
  gender         String?  // "Womens", "Mens", "Unisex"
  style          String?  // "Streetwear", "Goth", "Coquette"
}