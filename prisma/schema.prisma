generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NEXTAUTH: Account Model (Stores Google OAuth Tokens)
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NEXTAUTH: Session Model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// APP: User Model (Merged with NextAuth)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // App Specific Fields
  credits              Int       @default(5)  // Legacy field (kept for backward compatibility)
  descriptionCredits   Int       @default(5)  // AI description generation credits
  bgRemovalCredits     Int       @default(5)  // Background removal credits
  bgChangeCredits      Int       @default(5)  // Background change credits
  isPro                Boolean   @default(false)
  createdAt            DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
  stores        Store[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// PRODUCT MODEL (Unchanged)
model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  
  vendor      String?
  productType String?
  tags        String[]
  isSoldOut   Boolean  @default(false)
  publishedAt DateTime?

  originalDesc   String?  @db.Text
  generatedDesc  String?  @db.Text
  generatedImage String?  
  generatedTags  String?  @db.Text
  condition      String?
  era            String?
  gender         String?
  style          String?
  aesthetic      String?  @default("Trending ðŸ”¥")

  supplierUrl    String?
  supplierPrice  Float?
  lastSourced    DateTime?
  createdAt      DateTime @default(now())

  publishedStores PublishedProduct[]

  @@index([supplierUrl, lastSourced(sort: Desc)])
  @@index([createdAt(sort: Desc)])
}

// STORE CONNECTIONS
model Store {
  id          String   @id @default(cuid())
  userId      String
  platform    String   // 'shopify' or 'woocommerce'
  storeName   String
  storeUrl    String

  // Shopify specific
  shopifyDomain      String?  @unique
  shopifyAccessToken String?  @db.Text

  // WooCommerce specific
  wooApiUrl        String?
  wooConsumerKey   String?  @db.Text
  wooConsumerSecret String? @db.Text

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  publishedProducts PublishedProduct[]

  @@index([userId])
}

// TRACK PUBLISHED PRODUCTS
model PublishedProduct {
  id              String   @id @default(cuid())
  productId       String
  storeId         String
  externalId      String   // Product ID in Shopify/WooCommerce
  externalUrl     String?  // URL to product in their store
  publishedAt     DateTime @default(now())
  lastSyncedAt    DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  store   Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([productId, storeId])
  @@index([storeId])
  @@index([productId])
}