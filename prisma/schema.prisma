generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  credits   Int      @default(5)
  isPro     Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  aesthetic   String?  @default("Y2K")
  createdAt   DateTime @default(now())
  
  // AI Fields
  generatedDesc  String?  @db.Text
  generatedTags  String?  @db.Text
  condition      String?
  era            String?
  gender         String?
  style          String?

  // NEW: Supplier Hunter Fields
  supplierUrl    String?
  supplierPrice  Float?
  lastSourced    DateTime?
}