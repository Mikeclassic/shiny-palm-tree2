// ... existing User model ...

model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  
  // Filtering
  vendor      String?
  productType String?
  tags        String[]
  isSoldOut   Boolean  @default(false)
  publishedAt DateTime?

  // AI Fields
  generatedDesc  String?  @db.Text
  generatedImage String?  // <--- ADD THIS LINE
  generatedTags  String?  @db.Text
  condition      String?
  era            String?
  gender         String?
  style          String?
  aesthetic      String?  @default("Trending ðŸ”¥")

  // Supplier Fields
  supplierUrl    String?
  supplierPrice  Float?
  lastSourced    DateTime?
  createdAt      DateTime @default(now())

  @@index([supplierUrl, lastSourced(sort: Desc)])
  @@index([createdAt(sort: Desc)])
}