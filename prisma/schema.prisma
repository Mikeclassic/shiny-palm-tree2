// 1. CONNECTION SETTINGS (These were missing)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. USER MODEL
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  credits   Int      @default(5)
  isPro     Boolean  @default(false)
  createdAt DateTime @default(now())
}

// 3. PRODUCT MODEL (Updated with new fields)
model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  
  // NEW FIELDS FOR FILTERING
  vendor      String?
  productType String?
  tags        String[]
  isSoldOut   Boolean  @default(false)
  publishedAt DateTime?

  // AI Fields
  generatedDesc  String?  @db.Text
  generatedTags  String?  @db.Text
  condition      String?
  era            String?
  gender         String?
  style          String?
  aesthetic      String?  @default("Trending ðŸ”¥")

  // Supplier Hunter Fields
  supplierUrl    String?
  supplierPrice  Float?
  lastSourced    DateTime?
  createdAt      DateTime @default(now())

  // INDEXES FOR SPEED
  @@index([supplierUrl, lastSourced(sort: Desc)])
  @@index([createdAt(sort: Desc)])
}