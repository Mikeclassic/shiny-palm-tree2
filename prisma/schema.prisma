model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  
  // Filtering Fields
  vendor      String?
  productType String?
  tags        String[]
  isSoldOut   Boolean  @default(false)
  publishedAt DateTime?

  // AI & Content Fields
  originalDesc   String?  @db.Text  // <--- NEW FIELD (Raw store text)
  generatedDesc  String?  @db.Text  // The AI version
  generatedImage String?  
  generatedTags  String?  @db.Text
  
  // (Remove 'era', 'condition', 'gender' if you no longer want to store them, 
  // but keeping them is fine for legacy support. We will focus on 'style' for Tone).
  style          String?  // We will use this for TONE
  
  aesthetic      String?  @default("Trending ðŸ”¥")

  // Supplier Hunter Fields
  supplierUrl    String?
  supplierPrice  Float?
  lastSourced    DateTime?
  createdAt      DateTime @default(now())

  @@index([supplierUrl, lastSourced(sort: Desc)])
  @@index([createdAt(sort: Desc)])
}