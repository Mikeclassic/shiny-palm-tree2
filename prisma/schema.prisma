generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String
  credits   Int      @default(5)
  isPro     Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(cuid())
  title       String
  price       Float
  imageUrl    String
  sourceUrl   String   @unique
  
  // Filtering Fields
  vendor      String?
  productType String?
  tags        String[]
  isSoldOut   Boolean  @default(false)
  publishedAt DateTime?

  // AI & Content Fields
  originalDesc   String?  @db.Text  // Raw text from store
  generatedDesc  String?  @db.Text  // AI rewritten text
  generatedImage String?            // AI background image
  generatedTags  String?  @db.Text
  
  // Preferences
  condition      String?
  era            String?
  gender         String?
  style          String?            // Used for Tone
  aesthetic      String?  @default("Trending ðŸ”¥")

  // Supplier Hunter Fields
  supplierUrl    String?
  supplierPrice  Float?
  lastSourced    DateTime?
  createdAt      DateTime @default(now())

  // Speed Indexes
  @@index([supplierUrl, lastSourced(sort: Desc)])
  @@index([createdAt(sort: Desc)])
}